
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">

    <a class="navbar-brand" href="#">Brynn Robenstein</a>

    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a href="/" class="nav-link">Home</a>
      </li>
    </ul>


    <% if user_signed_in? %>
      <div class="navbar-nav ml-auto">
        <%= button_to "Log out", destroy_user_session_path, method: :delete, :class => "btn btn-primary ml-2" %>
        <%= button_to "New Project", new_project_path, method: :get, :class => "btn btn-secondary ml-2" %>
      </div>
    <% end %>

    <% if !user_signed_in? %>
      <div class="navbar-nav ml-auto">
        <%= button_to "Login", new_user_session_path, method: :get, :class => "btn btn-primary ml-2" %>
        <%= button_to "Sign up", new_user_registration_path, method: :get, :class => "btn btn-success ml-2" %>
      </div>
    <% end %>

</nav>


<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1>My Portfolio</h1>
    <p>This is my portfolio website for CS3300 at UCCS. Projects are listed below.</p>
    <a href="https://github.com/brobenst" class="btn btn-success">Github</a>
  </div>
</div>

<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-md-4 mt-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= project.title %></h5>
            <p class="card-text"><%= project.description %></p>
            <%= button_to "Show", project, method: :get, :class => "btn btn-primary" %>
            </br>
            <%= link_to 'Edit', edit_project_path(project) if user_signed_in?%>
            <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } if user_signed_in? %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<hr>
