<nav class="navbar navbar-expand-lg navbar-dark bg-dark">

    <a class="navbar-brand" href="#">Brynn Robenstein</a>

    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a href="/" class="nav-link">Home</a>
      </li>
    </ul>


    <% if user_signed_in? %>
      <div class="navbar-nav ml-auto">
        <%= button_to "Log out", destroy_user_session_path, method: :delete, :class => "btn btn-primary ml-2" %>
        <%= button_to "New Project", new_project_path, method: :get, :class => "btn btn-secondary ml-2" %>
      </div>
    <% end %>

    <% if !user_signed_in? %>
      <div class="navbar-nav ml-auto">
        <%= button_to "Login", new_user_session_path, method: :get, :class => "btn btn-primary ml-2" %>
        <%= button_to "Sign up", new_user_registration_path, method: :get, :class => "btn btn-success ml-2" %>
      </div>
    <% end %>
</nav>

<p id="notice"><%= notice %></p>


<div class="container">
  <h1 class="text-center"><%= @project.title %></h1>
  <p><%= @project.description %></p>
  <%= button_to "Edit", edit_project_path(@project), method: :get, :class => "btn btn-primary" if user_signed_in?%>
  <%= button_to "Delete", @project, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger mt-2" if user_signed_in? %>
</div>